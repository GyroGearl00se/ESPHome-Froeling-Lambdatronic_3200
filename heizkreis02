sensor:  
  - platform: modbus_controller
    modbus_controller_id: ${modbus_controller_id}
    name: "${name} HK1 - Vorlauf-Isttemperatur"
    id: ${name}_HK1_Vorlauf_Isttemperatur
    register_type: read
    address: 1060
